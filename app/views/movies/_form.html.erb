<%= form_for Movie.new, method: @method, url: {controller: 'movies', action: @action} do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :release_date %>
    <%= f.date_select :release_date,
          start_year: 1900,
          order: [:day, :month, :year] %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>